<%- include('partials/header') %>

<div class="jumbotron text-center">
  <p class="free">Share your secret with whole world Anonymously</p>
  <p class="free"> Every word shared by you is end to end encrypted. </p>
  <div class="container">
    <i class="fas fa-key fa-6x"></i>
    <h1 class="display-3">You've Discovered world 🌍 secrets!</h1>

   <% userWithSecrets.forEach(function(user){ %>
      <p class="secret-text"><%= user.secret %></p>
    <%}); %>

    <hr>
    
    <a class="btn btn-light btn-lg" href="/logout" role="button">Log Out</a>
    <a class="btn btn-dark btn-lg" href="/submit" role="button">Submit a Secret</a>
  </div>
</div>

